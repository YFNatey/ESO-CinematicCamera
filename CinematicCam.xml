<GuiXml>
    <Controls>
        <TopLevelControl name="CinematicCam_Container" mouseEnabled="false"
                         layer="DL_BACKGROUND" tier="DT_LOW" level="-5">
            <Controls>
                <Texture name="CinematicCam_LetterboxTop" mouseEnabled="false"
                         layer="DL_CONTROLS" tier ="DT_LOW" level="-10">
                    <Anchor point="TOPLEFT" relativeTo="GuiRoot" relativePoint="TOPLEFT" />
                    <Anchor point="TOPRIGHT" relativeTo="GuiRoot" relativePoint="TOPRIGHT" />
                    <Dimensions y="100" />
                </Texture>
                <Texture name="CinematicCam_LetterboxBottom" mouseEnabled="false"
                         drawLayer="DL_CONTROLS" drawTier="DT_HIGH" drawLevel="9">
                    <Anchor point="BOTTOMLEFT" relativeTo="GuiRoot" relativePoint="BOTTOMLEFT" />
                    <Anchor point="BOTTOMRIGHT" relativeTo="GuiRoot" relativePoint="BOTTOMRIGHT" />
                    <Dimensions y="100" />
                </Texture>
                <Label name="CinematicCam_ChunkedText"  mouseEnabled="false">
                    <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER" drawLayer="DL_CONTROLS" drawTier="DT_HIGH" drawLevel="10" />
                    <Dimensions x="800" y="300" />
                </Label>
            </Controls>
        </TopLevelControl>
        
        <!-- Subtitle Preview Container -->
        <TopLevelControl name="CinematicCam_PreviewContainer" mouseEnabled="false"
                         layer="DL_CONTROLS" tier="DT_MEDIUM" level="5">
            <Controls>
                <!-- Background box for preview text -->
                <Texture name="CinematicCam_PreviewBackground" mouseEnabled="false"
                         layer="DL_CONTROLS" tier="DT_MEDIUM" level="5">
                    <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER" />
                    <Dimensions x="820" y="120" />
                </Texture>
                
                <!-- Preview text label -->
                <Label name="CinematicCam_PreviewText" mouseEnabled="false"
                       layer="DL_CONTROLS" tier="DT_MEDIUM" level="6">
                    <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER" />
                    <Dimensions x="800" y="100" />
                </Label>
            </Controls>
        </TopLevelControl>
        
        <!-- Player Options Preview Container -->
        <TopLevelControl name="CinematicCam_PlayerOptionsPreviewContainer" mouseEnabled="false"
                         layer="DL_CONTROLS" tier="DT_MEDIUM" level="5">
            <Controls>
                <!-- Background box for player options preview -->
                <Texture name="CinematicCam_PlayerOptionsPreviewBackground" mouseEnabled="false"
                         layer="DL_CONTROLS" tier="DT_MEDIUM" level="5">
                    <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER" />
                    <Dimensions x="720" y="200" />
                </Texture>
                
                <!-- Player options preview text label -->
                <Label name="CinematicCam_PlayerOptionsPreviewText" mouseEnabled="false"
                       layer="DL_CONTROLS" tier="DT_MEDIUM" level="6">
                    <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER" />
                    <Dimensions x="700" y="1080" />
                </Label>
            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>